<div class="bg-light">
  <div class="container">
    <div class="form-box shadow-lg">
    
    <%= form_for @user do |f| %>
    <h1 class="text-dark">Update Form</h1>
      <%= render "devise/shared/error_messages", resource: resource %>

      <div class="d-flex input-fields">
        <div class="mt-3">
            <%= f.text_field :first_name ,placeholder: " First Name", class: "form-control"  %>
            <% @user.errors.full_messages_for(:first_name).each do |error_message| %>
                <p class="text-danger m-0 p-0"> *<%= error_message %></p>
            <% end %>
        </div>
        <div class="mt-3">
            <%= f.text_field :last_name ,placeholder: " Last Name", class: "form-control"  %>
        </div>
        <div class="mt-3">
            <%= f.text_field :email ,placeholder: " Email", class: "form-control"  %>
            <% @user.errors.full_messages_for(:email).each do |error_message| %>
                <p class="text-danger m-0 p-0"> *<%= error_message %></p>
            <% end %>
        </div>
        <div class="mt-3">
            <%= f.password_field :password, placeholder: " Password", class: "form-control"  %>
        </div>
        <div class="mt-3">
            <%= f.password_field :password_confirmation, autocomplete: "new-password",placeholder: " Confirm Password", class: "form-control" %>
        </div>
        <div>
          <%= f.label :roles, 'Roles' %>
          <%= f.collection_check_boxes :role_ids, Role.where.not(title: "Admin"), :id, :title do |box|%>
            <span>
              <%= box.check_box %>
              <%= box.label %>
            </span>
          <% end %>
        </div>
        
    </div>
    <div class="actions">
        <%= f.submit "Update" , class:"btn btn-outline-primary"%>
      </div>
    <% end %>
  </div>
  </div>
</div>

<%= render "devise/shared/links" %>


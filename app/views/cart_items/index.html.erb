<%= stylesheet_link_tag 'cart.css' %>

<% unless @cart_items.blank? %>
  <div class="cart bg-light">
    <div class="row">
      <div class="col-md-9 bg-white">
        <% @cart_items.each do |cart_item| %>
          <div class="shadow">
            <div class="row p-4">
              <div class="col-md-3">
                <%= image_tag Product.find(cart_item["product_id"]).images.first, class: "h-300" %>
              </div>
              <div class="col-md-6">
                <div>
                  <%= Product.find(cart_item["product_id"]).name %>
                </div>
                <div class="text-secondary">
                  <%= Product.find(cart_item["product_id"]).description  %>
                </div>
                <div class="secondary">
                  <%= cart_item["quantity"] %>
                </div>
              </div>
              <div class="col-md-2">

              </div>
            </div>
          </div>
        <% end %>
      </div>
      <div class="col-md-3 bg-white h-auto">
        <div class="p-3">
          <div class="price-heading text-secondary border-bottom border-secondary">
            Price Details
          </div>
        </div>
      </div>
    </div>
  </div>
<% else %>
  <h1 class="text-center mt-4">No Items In The Cart</h1>
<% end %>
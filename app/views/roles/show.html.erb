<%= stylesheet_link_tag "users_show.css"%>

<div class="d-flex align-items-center main" style="height: 90vh;">
    <div class = "container d-flex justify-content-center align-items-center shadow p-3 mb-5 bg-body-tertiary rounded show_container flex-column w-50 h-50 mt-5">
    <p class="h1 text-center mb-5">Role Details</p>

    <div class = "mb-5">
        <span class = "text-center fw-medium fs-4">Title : </span> 
        <span class = "fw-light fs-5"><%= @role.title %></span>
    </div>
    <div class = "mb-5">
        <span class = "text-center fw-medium fs-4">Description : </span> 
        <span class = "fw-light fs-5"><%= @role.description %></span>
    </div>
    <div class = "mt-5">
        <%= link_to "Edit", edit_role_path(@role), class: "btn btn-primary btn-lg"%>
    </div>
    </div>
    
</div>
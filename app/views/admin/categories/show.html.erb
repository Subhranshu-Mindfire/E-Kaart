<%= stylesheet_link_tag "users_show.css", "data-turbo-track": "reload"%>

<div class="d-flex align-items-center main" style="height: 90vh;">
    <div class = "container d-flex justify-content-center align-items-center shadow p-3 mb-5 bg-body-tertiary rounded show_container flex-column w-50 h-50 mt-5">
    <p class="h1 text-center mb-5">Category Details</p>

    <div class = "mb-5">
        <span class = "text-center fw-medium fs-4">Name : </span> 
        <span class = "fw-light fs-5"><%= @category.name %></span>
    </div>
    <div class = "mb-5">
        <span class = "text-center fw-medium fs-4">Description : </span> 
        <span class = "fw-light fs-5"><%= @category.description %></span>
    </div>
    <div class = "mt-5">
        <%= link_to "Edit", edit_admin_category_path(@category), class: "btn btn-primary btn-lg"%>
    </div>
    </div>
    
</div>
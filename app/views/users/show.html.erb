<%= stylesheet_link_tag "users_show.css"%>

<div class="d-flex align-items-center main">
    <div class = "container d-flex justify-content-center align-items-center shadow p-3 mb-5 bg-body-tertiary rounded show_container flex-column w-50 h-50 mt-5">
    <p class="h1 text-center mb-5">My Profile</p>

    <div class = "mb-5">
        <span class = "text-center fw-medium fs-4">First Name : </span> 
        <span class = "fw-light fs-5"><%= @user.first_name%></span>
    </div>
    <div class = "mb-5">
        <span class = "text-center fw-medium fs-4">Last Name : </span> 
        <span class = "fw-light fs-5"><%= @user.last_name%></span>
    </div>

    <div class = "mb-5">
        <span class = "text-center fw-medium fs-4">Email : </span> 
        <span class = "fw-light fs-5"><%= @user.email%></span>
    </div>

    <div class = "mb-2">
        <span class = "text-center fw-medium fs-4">Roles : </span>
        <span class = "fw-light fs-5"><%= @user.roles.map{|role| role.title}.join(",")%></span>
    </div>

    <div class = "mt-5">
        <%= link_to "Edit", edit_user_path(current_user), class: "btn btn-primary btn-lg"%>
    </div>
    </div>
    
</div>
<%= stylesheet_link_tag "new_user.css" %>

<div>
    <div class="container">
        <div class="form-box shadow-lg">
            <%= form_for @user, html: { class: 'form-control d-flex justify-center' } do |f| %>
                <h1 class="text-dark">Registration Form</h1>
                    <%= render "form", f: f %>
                    <div>
                        <%= f.submit "Register", class:"btn btn-outline-primary" %>
                    </div>
            <% end %>
        </div>
    </div>
</div>